<script>
  function showNextTable() {
      // Hide the current table
      document.getElementById('descriptionTable').style.display = 'none';
      
      // Show the new table
      document.getElementById('computationTable').style.display = 'block';
  }
  function readFile() {
            const fileInput = document.getElementById('fileInput');
            
            // Check if a file is selected
            if (fileInput.files.length > 0) {
                const file = fileInput.files[0];
                const reader = new FileReader();

                reader.onload = function (e) {
                    // Read the contents of the file
                    const fileContents = e.target.result;
                    console.log('File Contents:', fileContents);
                    // Perform further actions with the file contents
                };

                // Read the file as text
                reader.readAsText(file);
            } else {
                alert('Please select a file.');
            }
        }
</script>

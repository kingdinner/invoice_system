<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="light-gray-bg">
    <nav class="sidebar">
        <div class="p-4">
            <ul class="list-unstyled">
                <li>
                    <a href="/" class="nav-link <%= currentRoute === '/' || currentRoute.startsWith('/control/sendEmail/') ? 'active' : '' %>" data-target="client">Client</a>
                </li>    
                <li>
                    <a href="/menu" class="nav-link <%= currentRoute === '/menu' ? 'active' : '' %>" data-target="menu">Menu</a>
                </li>
                <li>
                    <a href="/email" class="nav-link <%= currentRoute === '/email' ? 'active' : '' %>" data-target="menu">Email Template</a>
                </li>
                <li>
                    <a href="/company-information" class="nav-link <%= currentRoute === '/company-information' ? 'active' : '' %>" data-target="menu">Company Information</a>
                </li>
            </ul>
        </div>
    </nav>    
    <div class="content">
        <div class="container">
            <h1>Send Email</h1>
            <div class="form-group mt-3">
                <label for="toEmail">To:</label>
                <input type="text" class="form-control" id="toEmail" name="toEmail" value="<%= client %>" readonly>
            </div>
            <div class="form-group mt-3">
                <label for="titleInput">Title:</label>
                <input type="text" class="form-control" id="titleInput" name="titleInput">
            </div>
            <div class="form-group mt-3">
                <label for="messageType">Select Message Type:</label>
                <select class="form-control" id="messageType" name="messageType">
                    <% emailValues.forEach((message) => { %>
                        <option value="<%= message %>"><%= message %></option>
                    <% }); %>
                </select>
            </div>
            <div class="d-flex justify-content-end align-items-center mt-4">
                <button type="button" class="btn btn-sm btn-primary" id="sendEmailButton">Send Email</button>
                <div class="form-group ml-2">
                    <select class="form-control form-control-sm" id="attachmentSelect" name="attachmentSelect">
                        <option value="attachment1">Attachment 1</option>
                        <option value="attachment2">Attachment 2</option>
                        <option value="attachment3">Attachment 3</option>
                    </select>
                </div>
            </div>                         
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/script.js"></script>
</body>
</html>

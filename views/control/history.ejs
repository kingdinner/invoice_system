<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="light-gray-bg">
    <nav class="sidebar">
        <div class="p-4">
            <ul class="list-unstyled">
                <li>
                    <a href="/" class="nav-link <%= currentRoute === '/' || currentRoute.startsWith('/control/') ? 'active' : '' %>" data-target="client">Client</a>
                </li>    
                <li>
                    <a href="/menu" class="nav-link <%= currentRoute === '/menu' ? 'active' : '' %>" data-target="menu">Menu</a>
                </li>
                <li>
                    <a href="/email" class="nav-link <%= currentRoute === '/email' ? 'active' : '' %>" data-target="menu">Email Template</a>
                </li>
                <li>
                    <a href="/company-information" class="nav-link <%= currentRoute === '/company-information' ? 'active' : '' %>" data-target="menu">Company Information</a>
                </li>
            </ul>
        </div>
    </nav>    
    <div class="content">
        <div class="container">
            <h1>History</h1>
            <div class="d-flex justify-content-end">
                <select id="yearSelect">
                    <option value="">Select a year</option>
                    <% for (const year in clientData) { %>
                        <option value="<%= year %>"><%= year %></option>
                    <% } %>
                </select>
            </div>
            <div class="container mt-4">
                <table class="table table-bordered">
                    <tbody>
                        <% for (const year in clientData) { %>
                            <% for (const month in clientData[year]) { %>
                                <tr>
                                    <td><%= month %></td>
                                    <td>Invoice</td>
                                    <td>
                                        <% if (clientData[year][month] && clientData[year][month].client && clientData[year][month].client[client] && Array.isArray(clientData[year][month].client[client])) { %>
                                            <% for (const attachment of clientData[year][month].client[client]) { %>
                                                <a href="/public/history/<%= client %>/<%= attachment %>"><%= attachment %></a><br>
                                            <% } %>
                                        <% } %>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/script.js"></script>
</body>
</html>

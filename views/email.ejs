<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../views/components/partials/sidebar.ejs') %>
    <div class="content">
        <div class="container mt-4">
            <h1>Email Template</h1>
            <%- include('../views/components/modal/editTemplate/modal.ejs') %>
            <button type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#addTemplateModal">
                Add New Template
            </button>
            <% emailValues.template.forEach(function(value, index) { %>
                <div class="row mt-4">
                    <div class="col-md-1">
                        <!-- Add a column for the number -->
                        <span class="number-label"><%= index + 1 %></span>
                    </div>
                    <div class="col-md-5">
                        <span class="label-text" id="labelText<%= index %>"><%= value %></span>
                        <form id="editForm<%= index %>" action="/updateEmailTemplate" method="POST">
                            <input type="text" class="form-control" id="editInput<%= index %>" value="<%= value %>" style="display: none;">
                        </form>
                    </div>
                    <div class="col-md-6">
                        <button id="editButton<%= index %>" class="btn btn-primary edit-button" data-index="<%= index %>">Edit</button>
                        <button id="saveButton<%= index %>" class="btn btn-success save-button" data-index="<%= index %>" style="display: none;">Save</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
<%- include('../views/components/partials/footer.ejs') %>

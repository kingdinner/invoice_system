<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../views/components/partials/sidebar.ejs') %>
    <div class="content">
        <div class="container py-4">
            <h1 class="mt-4 mb-3">Email Template</h1>
            <%- include('../views/components/modal/editTemplate/modal.ejs') %>
            <button type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#addTemplateModal">
                Add New Template
            </button>
            <% emailValues.forEach(function(value, index) { %>
                <div class="row mt-4">
                    <div>
                        <form id="editForm<%= index %>" action="/updateEmailTemplate" method="POST">
                            <label for="editTitle<%= index %>">Title</label>
                            <input type="text" class="form-control" id="editTitle<%= index %>" value="<%= value.title %>">
                            
                            <label for="editInput<%= index %>">Body</label>
                            <input type="text" class="form-control" id="editInput<%= index %>" value="<%= value.body %>">
                        </form>
                    </div>
                    <div class="mt-2">
                        <button id="saveButton<%= index %>" class="btn btn-success save-button" data-index="<%= index %>">Save</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
<%- include('../views/components/partials/footer.ejs') %>

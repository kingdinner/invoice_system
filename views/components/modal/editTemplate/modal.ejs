<div class="modal fade" id="addTemplateModal" tabindex="-1" aria-labelledby="addTemplateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addTemplateModalLabel">Add New Email Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addForm" action="/insertEmailTemplate" method="POST">
                    <div class="mb-3">
                        <label for="newTemplate" class="form-label">New Template Text</label>
                        <input type="text" class="form-control" id="newTemplate" name="newTemplate" placeholder="Enter your new template text">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="addForm" class="btn btn-primary">Add New Template</button>
            </div>
        </div>
    </div>
</div>